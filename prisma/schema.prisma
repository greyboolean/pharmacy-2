// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  MANAGER
  CASHIER
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  username  String    @unique
  password  String
  role      Role
  deletedAt DateTime?
}

model Medicine {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  quantity    Int
  deletedAt   DateTime?
}

model Customer {
  id          Int       @id @default(autoincrement())
  name        String
  email       String
  address     String
  phoneNumber String
  deletedAt   DateTime?
}
